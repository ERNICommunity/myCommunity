<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:myCommunity;assembly=myCommunity" x:Class="myCommunity.DetailsXaml" Padding="0, 20, 0, 0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Image Source="ernicommunity.jpeg" Grid.Row="0" HorizontalOptions="FillAndExpand" Aspect="Fill"/>
        <StackLayout Grid.Row="1" Padding="15">
            <Label Text="{Binding Title}" FontSize="18" TextColor="Blue" />
            <StackLayout Orientation="Horizontal">
                <Image Source="icon.png" VerticalOptions="Start" />
                <StackLayout Orientation="Vertical">
                    <Label Text="DATE &amp; TIME" />
                    <Label Text="{Binding EventDate}" />
                    <Label Text="{Binding Path=EventTime}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
        <StackLayout Grid.Row="2" Padding="15">
            <Label Text="{Binding Path=Location}" />
            <StackLayout>
                <Image Source=""/>
            </StackLayout>
        </StackLayout>
    </Grid>
